@model Box.Festa.Models.PesquisaAdmin
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" href="img/fav-icon.png" type="image/x-icon" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Box Festa</title>
    <!-- Icon css link -->
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/vendors/line-icon/css/simple-line-icons.css" rel="stylesheet">
    <link href="/vendors/elegant-icon/style.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Rev slider css -->
    <link href="/vendors/revolution/css/settings.css" rel="stylesheet">
    <link href="/vendors/revolution/css/layers.css" rel="stylesheet">
    <link href="/vendors/revolution/css/navigation.css" rel="stylesheet">
    <link href="/vendors/revolution/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!-- Extra plugin css -->
    <link href="/vendors/owl-carousel/owl.carousel.min.css" rel="stylesheet">
    <link href="/vendors/bootstrap-selector/css/bootstrap-select.min.css" rel="stylesheet">
    <link href="/vendors/jquery-ui/jquery-ui.css" rel="stylesheet">

    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/responsive.css" rel="stylesheet">
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/jquery.mask.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../../js/popper.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <!-- Rev slider js -->
    <script src="/vendors/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script src="/vendors/revolution/js/jquery.themepunch.revolution.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.video.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script src="/vendors/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <!-- Extra plugin css -->
    <script src="/vendors/counterup/jquery.waypoints.min.js"></script>
    <script src="/vendors/counterup/jquery.counterup.min.js"></script>
    <script src="/vendors/bootstrap-selector/js/bootstrap-select.min.js"></script>
    <script src="/vendors/image-dropdown/jquery.dd.min.js"></script>
    <script src="/js/smoothscroll.js"></script>
    <script src="/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="/vendors/isotope/isotope.pkgd.min.js"></script>
    <script src="/vendors/magnify-popup/jquery.magnific-popup.min.js"></script>
    <script src="/vendors/vertical-slider/js/jQuery.verticalCarousel.js"></script>
    <script src="/vendors/jquery-ui/jquery-ui.js"></script>


    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/main.js"></script>
    <script src="~/js/login.js"></script>
    <script src="~/js/admin.js"></script>
</head>
<body>

    <!--================Menu Area =================-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true);


        @Html.Hidden("HiddenCurrentUrl", String.Format("{0}/", Request.ApplicationPath))


        <div id="preloder">
            <div class="loader"></div>
        </div>
        <div class="header_top_area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="top_header_left">
                            <div class="selector">
                                <select class="language_drop" name="countries" id="countries" style="width:300px;">
                                    <option value='yt' data-image="/img/icon/flag-brasil.png" data-imagecss="flag yt" data-title="Brasil">Português</option>

                                </select>
                            </div>
                            <select class="selectpicker usd_select">
                                <option>BRL</option>
                            </select>


                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="top_header_middle">
                            <a href="#"><i class="fa fa-phone"></i> Call Us: <span>+55 31 99999-8888</span></a>
                            <a href="#"><i class="fa fa-envelope"></i> Email: <span>boxfestabr@gmail.com</span></a>
                            <img onclick="location.href = MontaCaminhoCompletoCart('Home/Index')" src="~/img/logo_kit_festa.png" alt="">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <ul class="top_right">
                            <!--li class="h_price"-->

                        </ul>

                    </div>


                </div>
            </div>
        </div>
        <!--================End Top Header Area =================-->
        <!--================Menu Area =================-->
        <header class="shop_header_area">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#"><img onclick="location.href = MontaCaminhoCompletoCart('Home/Index')" src="/img/logo_kit_festa.png" alt=""></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Produto/ListarProduto')">Produto</a></li>
                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Kit/ListarKit')">Kit</a></li>

                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Admin/AtualizarStatus')">Atualizar Status PagSeguro</a></li>
                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Admin/PesquisaPedido')">Consultar Pedidos Por Dia</a></li>

                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Admin/PesquisaUsuario')">Consultar Pedidos Por Usuário</a></li>

                            <li class="nav-item"><a class="nav-link" style="font-size:12px" onclick="location.href = MontaCaminhoCompletoCart('Admin/Admin/FiltroRelatorio')">Relatórios</a></li>


                        </ul>
                    </div>
                </nav>
            </div>
        </header>



        <!--================End Menu Area =================-->
        <!--================Categories Banner Area =================-->
        <section class="solid_banner_area">
            <div class="container">
                <div class="solid_banner_inner">
                    <h3>Consulta Usuário</h3>
                    <ul>
                        <li><a href="#">Admin</a></li>
                        <li><a href="track.html">Consulta Usuário</a></li>
                    </ul>
                </div>
            </div>
        </section>

        Html.RenderPartial("_Mensagens");
        <!--================End Categories Banner Area =================-->
        <!--================login Area =================-->
        <section class="login_area p_100">
            <div class="container">
                <div class="login_inner">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="login_title">
                                <h2>Consulta Usuário</h2>

                            </div>




                            <div class="col-lg-12 form-group">
                                @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", @id = "usuario", name = "usuario", @placeholder = "Email do Usuário" })

                            </div>


                            <div class="col-lg-12 form-group">
                                <div id="preloder2">
                                    <div class="loader2"></div>
                                </div>
                                <button type="submit" value="login" onclick="$('.loader2').show()" name="pesquisa:Usuario" class="btn update_btn form-control">Pesquisar</button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </section>

        if (ViewBag.Usuario != null)
        {
            <section class="shopping_cart_area p_100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="cart_product_list">
                                <h3 class="cart_single_title">Usuario</h3>
                                <h5 class="cart_single_title">Nome:&nbsp;@ViewBag.Usuario.Nome &nbsp;&nbsp;&nbsp;Email:&nbsp;@ViewBag.Usuario.Email</h5>
                                <br />
                                <br />
                                <h3 class="cart_single_title">Lista de Pedidos</h3>

                                @foreach (Box.Festa.Models.Pedido pedido in ViewBag.Usuario.ListaPedido)
                                {
                                    {
                                        var transacao = string.IsNullOrEmpty(pedido.IdTransacao) ? "-" : pedido.IdTransacao;

                                        <label style="font-size:16px">Pedido: &nbsp;</label><label style="font-weight:600;font-size:16px;">@pedido.Id&nbsp;</label><label style="margin-left:30px;font-size:16px">Data: &nbsp;@pedido.Data &nbsp; @pedido.Hora</label><br /><label style="margin-left:30px;font-size:16px;">Transação: &nbsp; </label><label style="margin-left:30px;font-size:16px;font-weight:600">@transacao </label>
                                    }
                                    <div class="row">
                                        @{ var status = string.IsNullOrEmpty(pedido.StatusTexto) ? "Aguardando Processamento" : pedido.StatusTexto;
                                            var cor = string.IsNullOrEmpty(pedido.Status) ? "color:goldenrod;" : pedido.Status.Equals("7") ? "color:red;" : pedido.Status.Equals("3") ? "color:green;" : "color:goldenrod;";
                                            <label style="font-size:16px">Status: &nbsp;</label><label style="font-weight:600;font-size:16px;@cor">@status</label>
                                        }
                                    </div>
                                    <br />

                                    <div class="table-responsive-md">
                                        <table class="table">
                                            <thead>

                                                <tr scope="row">
                                                    <th scope="col">produto</th>
                                                    <th scope="col">preço</th>
                                                    <th scope="col">quantidade</th>
                                                    <th scope="col">total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Box.Festa.Models.SacolaProduto produto in pedido.Sacola.Produtos)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="media">
                                                                <div class="d-flex">
                                                                    <img src="@produto.Produto.ImagemSacola" alt="">
                                                                </div>
                                                                <div class="media-body">
                                                                    <h4>@produto.Produto.Descricao</h4>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td><p> @string.Format("{0:C}", @produto.Produto.Valor)</p></td>
                                                        <td><p> @produto.Produto.Qtde</p></td>

                                                        @{ double total = 0; double valor = @produto.Produto.Valor; double qtde = @produto.Produto.Qtde; total = valor * qtde;
                                                            <td><p> @string.Format("{0:C}", @total)</p></td>
                                                        }

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <br />
                                }
                            </div>

                        </div>

                    </div>
                </div>
            </section>


        }

        <!--================End login Area =================-->
        <!--================Footer Area =================-->
        <footer class="footer_area">
            <div class="container">
                <div class="footer_widgets">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-6">
                            <aside class="f_widget f_about_widget">
                                <img src="../../img/logo_kit_festa.png" onclick="location.href = MontaCaminhoCompletoCart('Home/Index')" alt="">
                                <p>Box para decoração de festas</p>
                                <h6>Social:</h6>
                                <ul>
                                    <li><a href="#"><i class="social_facebook"></i></a></li>
                                    <li><a href="#"><i class="social_twitter"></i></a></li>
                                    <li><a href="#"><i class="social_pinterest"></i></a></li>
                                    <li><a href="#"><i class="social_instagram"></i></a></li>
                                    <li><a href="#"><i class="social_youtube"></i></a></li>
                                </ul>
                            </aside>
                        </div>
                        
                    </div>
                </div>
                <div class="footer_copyright">
                    <h5>
                        ©
                        <script>document.write(new Date().getFullYear());</script> <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </h5>
                </div>
            </div>
        </footer>
        <!--================End Footer Area =================-->
    }



</body>
</html>