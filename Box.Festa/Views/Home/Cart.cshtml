                                        <li><a href="#"><span>Total</span>@string.Format("{0:C}", Model.TotalSacola) </a></li>
                                    </ul>
                                </div>
                                <div class="form-group col-lg-12">
                                    <h3 class="cart_single_title">Formas de Pagamento</h3>
                                    <center>
