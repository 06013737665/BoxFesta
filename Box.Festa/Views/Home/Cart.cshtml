        <section class="shopping_cart_area p_100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="cart_product_list">
                            <h3 class="cart_single_title">Produtos</h3>
                            <div class="table-responsive-md">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col"></th>
                                            <th scope="col">produto</th>
                                            <th scope="col">preço</th>
                                            <th scope="col">quantidade</th>
                                            <th scope="col">total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Box.Festa.Models.SacolaProduto produto in Model.Produtos)
                                        {

                                            <tr>
                                                <th scope="row">
                                                    <img onclick="excluirProduto(@produto.Produto.Codigo)" src="/img/icon/close-icon.png" alt="">
                                                </th>
                                                <td>
                                                    <div class="media">
                                                        <div class="d-flex">
                                                            <img src="@produto.Produto.ImagemSacola" alt="">
                                                        </div>
                                                        <div class="media-body">
                                                            <h4>@produto.Produto.Descricao</h4>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><p>@string.Format("{0:C}", @produto.Produto.Valor)</p></td>
                                                <td>
                                                    <input type="text" value="@produto.Produto.Qtde" id="qtde_@produto.Produto.Codigo" maxlength="2" name="qtde_@produto.Produto.Codigo" class="qtdeText" style="width: 50%;" />  <button class="btn btn-default" onclick="atualizarQuantidade(@produto.Produto.Codigo);" type="button">
                                                        <i class="fa fa-refresh"></i>
                                                    </button>
                                                </td>
                                                @{double total = 0; double valor = @produto.Produto.Valor; double qtde = @produto.Produto.Qtde; total = valor * qtde;}
                                                <td><p> @string.Format("{0:C}", @total)</p></td>
                                            </tr>


                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
