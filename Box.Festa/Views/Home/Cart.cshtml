                                        @Html.TextBoxFor(model => model.Cep, new { @class = "form-control", @id = "zip", name = "zip", @placeholder = "Cep" })
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <div id="preloder2">
                                            <div class="loader2"></div>
                                        </div>
                                        <button type="submit" onclick="$('.loader2').show(); " name="cart:Sedex" value="frete" class="btn   btn-info  form-control">Atualizar Frete</button>

                                    </div>
                                    @if (Model.MostrarEndereco)
                                    {
                                        <div class="form-group col-lg-6">
                                            @Html.TextBoxFor(model => model.Rua, new { @class = "form-control", @id = "rua", name = "rua" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control", @id = "cidade", name = "cidade" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.TextBoxFor(model => model.Estado, new { @class = "form-control", @id = "estado", name = "estado" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.TextBoxFor(model => model.NumeroEndereco, new { @class = "form-control", @id = "numero", name = "numero", @placeholder = "Número*" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            @Html.TextBoxFor(model => model.Complemento, new { @class = "form-control", @id = "complemento", name = "complemento", @placeholder = "Complemento" })
                                        </div>

                                    }

                               
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="total_amount_area">
                            <div class="cupon_box">
                                <h3 class="cart_single_title">Cupom de Desconto</h3>
                                <div class="cupon_box_inner">
                                    <input type="text" placeholder="Digite seu cupom aqui">
                                    <button type="submit" class="btn btn-primary subs_btn" style="background-color:#007bff;">aplicar cupom</button>
                                </div>
                            </div>
                            <div class="cart_totals">
                                <h3 class="cart_single_title">Cupom de Desconto</h3>
                                <div class="cart_total_inner">
                                    <ul>
                                        <li><a href="#"><span>Produtos</span>@string.Format("{0:C}", Model.TotalProduto) </a></li>
                                        <li><a href="#"><span>Frete</span><label class="totalSedex">@string.Format("{0:C}", @Model.Sedex)</label></a></li>
