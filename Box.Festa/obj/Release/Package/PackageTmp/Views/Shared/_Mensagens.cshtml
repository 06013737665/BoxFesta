<div id="mensagemGeral">

    @if (TempData["Info"] != null && TempData["Info"].ToString().Trim().Length > 0)
    {
        <div class="fade-alert alert alert-info">
            <a class="close" onclick="$(this).parent().slideUp(1000, function () { $(this).children().remove(); })">×</a>
            <span>@Html.Raw(TempData["Info"])</span>
        </div>
    }

    @if (TempData["Alerta"] != null && TempData["Alerta"].ToString().Trim().Length > 0)
    {
        <div class="fade-alert alert alert-warning">
            <a class="close" onclick="$(this).parent().slideUp(1000, function () { $(this).children().remove(); })">×</a>
            <span>@Html.Raw(TempData["Alerta"])</span>
        </div>
    }

    @if (TempData["Aviso"] != null && TempData["Aviso"].ToString().Trim().Length > 0)
    {
        <div class="fade-alert alert alert-block">
            <a class="close" onclick="$(this).parent().slideUp(1000, function(){ $(this).children().remove(); })">×</a>
            <span>@Html.Raw(TempData["Aviso"])</span>
        </div>
    }

    @if (TempData["Mensagem"] != null && TempData["Mensagem"].ToString().Trim().Length > 0)
    {
        <div class="fade-alert alert alert-success">
            <a class="close" onclick="$(this).parent().slideUp(1000, function(){ $(this).children().remove(); })">×</a>
            <span>@Html.Raw(TempData["Mensagem"])</span>
        </div>
    }

    @if (TempData["Erro"] != null && TempData["Erro"].ToString().Trim().Length > 0)
    {
        <div class="fade-alert alert alert-danger">
            <a class="close" onclick="$(this).parent().slideUp(1000, function(){ $(this).children().remove(); })">×</a>
            <span>@Html.Raw(TempData["Erro"])</span>
        </div>
    }

    @if (TempData["ErrosValidacao"] != null)
    {
        <div class="fade-alert alert alert-danger">
            <a class="close" onclick="$(this).parent().slideUp(1000, function(){ $(this).children().remove(); })">×</a>
            <ul>
                @{List<String> erros = (List<String>)TempData["ErrosValidacao"];}
                @for (int i = 0; i < erros.Count; i++)
                {
                    <li>@Html.Raw(erros[i])</li>
                }
            </ul>
        </div>
                    }
</div>
